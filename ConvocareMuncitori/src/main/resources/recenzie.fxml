<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane fx:controller="org.loose.fis.sre.controllers.RecenzieController"
          xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" minHeight="1000" minWidth="3900"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text fx:id="title_text" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>
    <Text fx:id="err" GridPane.columnIndex="0" GridPane.columnSpan="1"
          GridPane.rowIndex="1"/>

    <Label text="Nota:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="nota" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Text textAlignment="LEFT" fx:id="submit" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button fx:id="submit_btn" onAction="#submitRecenzie" text="Submit"/>
    </HBox>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button onAction="#gotoIstoric" text="Inapoi"/>
    </HBox>
</GridPane>
